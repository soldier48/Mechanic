<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/opensans_bold"
                android:lineSpacingExtra="8.3sp"
                android:text="Regístrate con"
                android:textColor="#444445"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="85.3dp"
                    android:layout_height="41.3dp"
                    android:elevation="2dp"
                    android:src="@drawable/fb" />




                <ImageView
                    android:layout_width="85.3dp"
                    android:layout_height="41.3dp"
                    android:layout_marginLeft="12.7dp"
                    android:elevation="2dp"
                    android:src="@drawable/google" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="O"
                android:textColor="#aab0b9"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="78dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4fc631">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#00000000"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="USUARIO"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#4fc631"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="5dp"
                    android:background="#aab0b9" />



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#00000000"
                        android:hint="EMAIL"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#4fc631"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="5dp"
                    android:background="#aab0b9" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#aab0b9">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="CONTRASEÑA"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#4fc631"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#aab0b9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="NUMERO CELULAR"
                    android:textColor="#aab0b9"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/sp_number"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:background="@drawable/custom_spinner"
                            android:spinnerMode="dropdown">

                        </Spinner>

                        <View
                            android:layout_width="75dp"
                            android:layout_height="0.7dp"
                            android:background="#aab0b9" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">


                        <EditText
                            android:fontFamily="@font/opensans_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:backgroundTint="#00000000"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="#4fc631"
                            android:textCursorDrawable="@drawable/color_cursor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#aab0b9" />

                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/signup_rounded_corner"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="REGISTRARSE"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <!--  <customfonts.MyTextView_OpenSans_SemiBold
                  android:layout_width="133dp"
                  android:layout_height="41dp"
                  android:layout_marginLeft="44dp"
                  android:layout_marginTop="30dp"
                  android:background="@drawable/rounded_corner3.xml"
                  android:gravity="center"
                  android:text="SIGNUP"
                  android:textColor="#FFFFFF"
                  android:textSize="13sp" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Ya estas listo? "
                    android:textColor="#444445" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Ingresa"
                    android:textColor="#3498DB" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>